<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.info_sekolah.InfoSekolahActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:background="@color/transparent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="325.00dp"
            app:contentScrim="@color/yellow"
            app:expandedTitleMarginStart="20.80dp"
            app:expandedTitleMarginEnd="93.60dp"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="325.00dp"
                android:id="@+id/imgItem"
                android:src="@drawable/logo"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:riv_corner_radius_bottom_right="26.00dp"
                app:riv_corner_radius_bottom_left="26.00dp"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleTextColor="@color/white"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15.60dp"
                android:paddingTop="10.40dp"
                android:paddingEnd="5.20dp"
                android:paddingBottom="10.40dp"
                android:layout_margin="13.00dp"
                android:layout_gravity="start"
                android:background="@drawable/btn_bg2"
                android:id="@+id/imgToolbarBtnBack"
                android:src="@drawable/ic_back"/>





        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="13.00dp"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="26.00dp"
            android:layout_marginEnd="26.00dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:textAlignment="center"
                android:padding="13.00dp"
                android:text="Nama Sekolah"
                android:id="@+id/tv_Nama_sekolah"
                android:textColor="@color/black"
                android:textSize="19.50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kelas"/>


                    <TextView
                        android:id="@+id/tvNPSN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NPSN"
                        android:textSize="17.00sp"
                        android:textColor="@color/hintTextColor"
                        android:maxEms="10"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/gilroy_light"
                        android:paddingTop="13.00dp"
                        android:paddingStart="6.50dp"
                        android:paddingBottom="13.00dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kelas"/>


                    <TextView
                        android:id="@+id/tv_Jenjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenjang"
                        android:textSize="17.00sp"
                        android:textColor="@color/hintTextColor"
                        android:maxEms="10"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/gilroy_light"
                        android:paddingTop="13.00dp"
                        android:paddingStart="6.50dp"
                        android:paddingBottom="13.00dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kelas"/>


                    <TextView
                        android:id="@+id/tv_akreditasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Akreditasi"
                        android:textSize="17.00sp"
                        android:textColor="@color/hintTextColor"
                        android:maxEms="10"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:fontFamily="@font/gilroy_light"
                        android:paddingTop="13.00dp"
                        android:paddingStart="6.50dp"
                        android:paddingBottom="13.00dp"/>
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="13.00dp"
            android:text="Alamat Sekolah"
            android:textColor="@color/black"
            android:textSize="19.50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Alamat_sekolah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.00sp"
                    android:textColor="@color/hintTextColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_light"
                    android:paddingTop="13.00dp"
                    android:paddingStart="6.50dp"
                    android:paddingBottom="13.00dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="13.00dp"
            android:text="Nama Kepala Sekolah"
            android:textColor="@color/black"
            android:textSize="19.50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Nama_kepsek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.00sp"
                    android:textColor="@color/hintTextColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_light"
                    android:paddingTop="13.00dp"
                    android:paddingStart="6.50dp"
                    android:paddingBottom="13.00dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="13.00dp"
            android:text="NIP Kepala Sekolah"
            android:textColor="@color/black"
            android:textSize="19.50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_NIP_kepsek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.00sp"
                    android:textColor="@color/hintTextColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_light"
                    android:paddingTop="13.00dp"
                    android:paddingStart="6.50dp"
                    android:paddingBottom="13.00dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="13.00dp"
            android:text="Pangkat Kepala Sekolah"
            android:textColor="@color/black"
            android:textSize="19.50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            app:cardBackgroundColor="@color/pink"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Pangkat_kepsek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.00sp"
                    android:textColor="@color/hintTextColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_light"
                    android:paddingTop="13.00dp"
                    android:paddingStart="6.50dp"
                    android:paddingBottom="13.00dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:paddingStart="13.00dp"
            android:text="Jabatan Kepala Sekolah"
            android:textColor="@color/black"
            android:textSize="19.50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.00dp"
            app:cardCornerRadius="13.00dp"
            app:cardElevation="6.50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Jabatan_kepsek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.00sp"
                    android:textColor="@color/hintTextColor"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_light"
                    android:paddingTop="13.00dp"
                    android:paddingStart="6.50dp"
                    android:paddingBottom="13.00dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>